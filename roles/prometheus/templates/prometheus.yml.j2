global:
  scrape_interval: {{ prometheus_scrape_interval }}
  evaluation_interval: 30s
  scrape_timeout: {{ prometheus_scrape_timeout }}
  external_labels:
      monitor: 'tordns-party'

rule_files:
  - alerts/*.alerts

scrape_configs:
  - job_name: 'nodes'
    metrics_path: /metrics
    static_configs:
      - targets:
        - tordns.party:9100
        - test.tordns.party:9100

  - job_name: 'tor'
    static_configs:
      - targets:
        - tordns.party:9052
        - test.tordns.party:9052

  - job_name: 'dnsmasq'
    static_configs:
      - targets:
        - localhost:9153

  - job_name: 'mtail'
    metrics_path: /metrics
    static_configs:
      - targets:
        - tordns.party:3903
        - test.tordns.party:3903